{
  "name": "laravel/laravel",
  "type": "project",
  "description": "The skeleton application for the Laravel framework.",
  "keywords": ["laravel", "framework"],
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "barryvdh/laravel-dompdf": "^3.0",
    "djunehor/laravel-bible": "^1.0",
    "dompdf/dompdf": "^3.0",
    "laravel/framework": "^11.9",
    "laravel/jetstream": "^5.1",
    "laravel/sanctum": "^4.0",
    "laravel/tinker": "^2.9",
    "laravel/ui": "^4.5",
    "livewire/livewire": "^3.6",
    "mckenziearts/laravel-notify": "^2.5",
    "stripe/stripe-php": "^15.3"
  },
  "require-dev": {
    "fakerphp/faker": "^1.23",
    "laravel/pint": "^1.13",
    "laravel/sail": "^1.26",
    "mockery/mockery": "^1.6",
    "nunomaduro/collision": "^8.0",
    "phpunit/phpunit": "^11.0.1"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Database\\Factories\\": "database/factories/",
      "Database\\Seeders\\": "database/seeders/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php artisan package:discover --ansi"
    ],
    "post-install-cmd": [
      "@php -r \"if (!file_exists('.env') && file_exists('.env.example')) copy('.env.example', '.env');\"",
      "@create-directories",
      "@setup-profile-photos",
      "@php artisan storage:link --quiet || true"
    ],
    "post-update-cmd": [
      "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
      "@create-directories",
      "@setup-profile-photos", 
      "@php artisan storage:link --quiet || true"
    ],
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "@php artisan key:generate --ansi",
      "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
      "@create-directories",
      "@setup-profile-photos",
      "@php artisan storage:link --quiet || true",
      "@php artisan migrate --graceful --ansi"
    ],
    "create-directories": [
      "@php -r \"!is_dir('storage/logs') && mkdir('storage/logs', 0755, true);\"",
      "@php -r \"!is_dir('storage/framework/cache') && mkdir('storage/framework/cache', 0755, true);\"",
      "@php -r \"!is_dir('storage/framework/sessions') && mkdir('storage/framework/sessions', 0755, true);\"",
      "@php -r \"!is_dir('storage/framework/views') && mkdir('storage/framework/views', 0755, true);\"",
      "@php -r \"!is_dir('storage/app/public') && mkdir('storage/app/public', 0755, true);\"",
      "@php -r \"!is_dir('storage/app/public/profile-photos') && mkdir('storage/app/public/profile-photos', 0755, true);\"",
      "@php -r \"!is_dir('bootstrap/cache') && mkdir('bootstrap/cache', 0755, true);\""
    ],
    "setup-profile-photos": [
      "@php -r \"!is_dir('storage/app/public/profile-photos') && mkdir('storage/app/public/profile-photos', 0755, true);\"",
      "@php -r \"file_exists('storage/profile-photos/user.jpg') && !file_exists('storage/app/public/profile-photos/user.jpg') && rename('storage/profile-photos/user.jpg', 'storage/app/public/profile-photos/user.jpg');\""
    ],
    "railway-deploy": [
      "@create-directories",
      "@setup-profile-photos",
      "@php artisan config:cache",
      "@php artisan route:cache", 
      "@php artisan view:cache",
      "@php artisan storage:link --quiet || true"
    ]
  },
  "extra": {
    "laravel": {
      "dont-discover": []
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "php-http/discovery": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}